<?xml version="1.0" encoding="utf-8"?>
<com.imoonx.image.ui.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dadada"
        android:clickable="false"
        android:contentDescription="@string/default_title_desc"
        android:focusable="false"
        android:scaleType="centerInside" />

    <View
        android:id="@+id/lay_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white40"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/cb_selected"
        android:layout_width="@dimen/space_20"
        android:layout_height="@dimen/space_20"
        android:layout_gravity="top|right"
        android:layout_margin="@dimen/space_4"
        android:clickable="false"
        android:contentDescription="@string/default_title_desc"
        android:focusable="false"
        android:scaleType="centerInside"
        android:src="@drawable/image_cb_select_image_check_selector" />

    <ImageView
        android:id="@+id/iv_is_gif"
        android:layout_width="@dimen/space_30"
        android:layout_height="@dimen/space_18"
        android:layout_gravity="right|bottom"
        android:contentDescription="@string/default_title_desc"
        android:padding="@dimen/space_2"
        android:scaleType="centerInside"
        android:visibility="gone" />

</com.imoonx.image.ui.SquareLayout>