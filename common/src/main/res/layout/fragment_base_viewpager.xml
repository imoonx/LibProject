<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_nav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_layout_height"
        android:elevation="@dimen/elevation_value"
        android:background="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/swiperefresh_color3"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabTextAppearance="@style/tab_layout_text_style"
        app:tabTextColor="@color/swiperefresh_color3" />

    <android.support.v4.view.ViewPager
        android:id="@+id/base_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
