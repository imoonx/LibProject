<?xml version="1.0" encoding="utf-8"?>
<com.imoonx.common.ui.SuperRefreshLayoutScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/superRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.imoonx.common.ui.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.imoonx.common.ui.NoScrollListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scrollbars="none" />

                <LinearLayout
                    android:id="@+id/loadmore_ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_48"
                    android:clickable="false"
                    android:gravity="center"
                    android:minHeight="@dimen/space_48"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/pb_footer"
                        android:layout_width="@dimen/space_24"
                        android:layout_height="@dimen/space_24"
                        android:layout_margin="@dimen/space_16" />

                    <TextView
                        android:id="@+id/tv_footer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/error_view_loading" />
                </LinearLayout>

            </LinearLayout>

            <com.imoonx.common.ui.EmptyLayout
                android:id="@+id/error_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

    </com.imoonx.common.ui.CustomerScrollView>

</com.imoonx.common.ui.SuperRefreshLayoutScrollView>